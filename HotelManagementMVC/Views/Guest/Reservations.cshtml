@using HotelManagementMVC.Models.Entity
@model List<TblPreReservation>

@{
    ViewBag.Title = "Reservations";
    Layout = "~/Views/Shared/_GuestLayout.cshtml";
}

<h2>Reservations</h2>
<br />
<table class=" table table-bordered">
    <tr>
        <th>Guest Name Surname</th>
        <th>Check-in Date</th>
        <th>Check-out Date</th>
        <th>Number of People</th>
        <th>Details</th>
    </tr>
    @foreach (var x in Model)
    {
    <tr>
        <td>@x.NameSurname</td>
        <td>@(((DateTime)x.StartDate).ToString("dd-MMM-yyy"))</td>
        <td>@(((DateTime)x.LeaveDate).ToString("dd-MMM-yyy"))</td>
        <td>@x.NumberOfPeople</td>
        <td><a href="#" class ="btn btn-primary">Details</a></td>
    </tr>
    }
</table>

